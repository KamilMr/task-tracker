# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Environment
ENV=production

# Timezone (IANA format, e.g., Europe/Warsaw, America/New_York)
# Falls back to system timezone if not set
TIMEZONE=Europe/Warsaw

# MySQL Database Configuration
MYSQL_HOST=db
MYSQL_USER=root
MYSQL_PASSWD=your_secure_password_here
MYSQL_DATABASE=task_tracker_v1
MYSQL_ROOT_PASSWORD=your_secure_password_here

# Toggl API Integration (Optional)
TOGGL_API_TOKEN=your_toggl_api_token_here
TOGGL_WORKSPACE_ID=your_workspace_id_here
